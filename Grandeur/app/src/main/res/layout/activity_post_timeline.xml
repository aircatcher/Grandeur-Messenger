<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.grand.grandeur.PostTimeline">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_post_timeline" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:layout_x="340dp"
        android:layout_y="520dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/button_add_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_x="288dp"
        android:layout_y="455dp"
        android:text="Add URL"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_vertical|center_horizontal" />

    <EditText
        android:id="@+id/editText"
        android:hint="@string/timeline_hint"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="65dp"
        android:layout_x="7dp"
        android:layout_y="62dp" />

    <TextView
        android:id="@+id/timeline_url"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignTop="@+id/fab"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:layout_x="5dp"
        android:layout_y="456dp"
        android:gravity="center"
        android:hint="@string/timeline_url_hint"
        android:textAlignment="textEnd"
        android:textSize="19dp" />

</AbsoluteLayout>
